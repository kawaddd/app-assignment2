<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'user_info', user: @user %>
        <div class="row">
          <%= link_to edit_user_path(current_user),class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
　        <%= f.submit 'Create Book' %>
　　　  <% end %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
  		    <tbody>
  		      <% @book.each do |book| %>
  		      <tr>
  		        <td><%= image_tag @user.get_profile_image %></td>
  		        <td><%= link_to book.title, book_path(book) %></td>
  		        <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>