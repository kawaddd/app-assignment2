<main>
  <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @book do |f| %>
          <div class=field>
            <label for="user_name">Name</label>
              <%= f.text_field :title %>
          </div>
          
          <div>
              
          </div>

          <div class=field>
            <label for="user_introduction">Introduction</label>
              <%= f.text_area :body %>
          </div>

          <div class=actions>
              <%= f.submit 'Update User' %>
          </div>
        </div>
      </div>
    </div>
</main>