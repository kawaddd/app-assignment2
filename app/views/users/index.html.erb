<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'user_info', user: current_user %>
        <div class="row">
　        <%= link_to edit_user_path(current_user),class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
　        <%= f.submit 'Create Book' %>
　　　  <% end %>
      </div> 
      
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show",user_path(user) %></td>
            </tr>  
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>